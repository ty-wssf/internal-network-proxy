<?xml version="1.0" encoding="UTF-8" ?>
<view x:extends="_gen/_ProxyPortMapping.view.xml" x:schema="/nop/schema/xui/xview.xdef" xmlns:x="/nop/schema/xdsl.xdef">

    <grids>
        <grid id="list"/>
        <grid id="pick-list"/>
    </grids>

    <forms>
        <form id="view"/>
        <form id="edit">
            <cells>
                <cell id="serverPort">
                    <gen-control>
                        <input-number>
                            <validations>
                                <isInt>true</isInt>
                                <minimum>0</minimum>
                                <maximum>65535</maximum>
                            </validations>
                        </input-number>
                    </gen-control>
                </cell>
                <cell id="clientPort">
                    <gen-control>
                        <input-number>
                            <validations>
                                <isInt>true</isInt>
                                <minimum>0</minimum>
                                <maximum>65535</maximum>
                            </validations>
                        </input-number>
                    </gen-control>
                </cell>
                <cell id="enabled">
                    <visibleOn>false</visibleOn>
                </cell>
            </cells>
        </form>
    </forms>

    <pages>
        <crud name="main">
            <rowActions>
                <action id="row-enabled-button" level="danger" label="启用" x:abstract="true">
                    <api url="@mutation:ProxyPortMapping__enabled?id=$id"/>
                    <confirmText>确认启用吗？</confirmText>
                </action>
                <action id="row-disabled-button" level="danger" label="禁用" x:abstract="true">
                    <api url="@mutation:ProxyPortMapping__disabled?id=$id"/>
                    <confirmText>确认禁用吗？</confirmText>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-enabled-button" label="启用">
                        <api url="@mutation:ProxyPortMapping__enabled">
                            <data>
                                <id>$id</id>
                            </data>
                        </api>
                        <confirmText>确认启用吗？</confirmText>
                        <visibleOn>${enabled == '0'}</visibleOn>
                    </action>
                    <action id="row-disabled-button" label="禁用">
                        <api url="@mutation:ProxyPortMapping__disabled">
                            <data>
                                <id>$id</id>
                            </data>
                        </api>
                        <confirmText>确认禁用吗？</confirmText>
                        <visibleOn>${enabled == '1'}</visibleOn>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker"/>
    </pages>
</view>
