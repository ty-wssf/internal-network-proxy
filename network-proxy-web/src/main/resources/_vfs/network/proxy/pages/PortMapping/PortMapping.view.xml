<?xml version="1.0" encoding="UTF-8" ?>
<view x:extends="_gen/_PortMapping.view.xml" x:schema="/nop/schema/xui/xview.xdef" xmlns:x="/nop/schema/xdsl.xdef">

    <grids>
        <grid id="list"/>
        <grid id="pick-list"/>
    </grids>

    <forms>
        <form id="view"/>
        <form id="edit">
            <layout>
                serverPort[服务端端口]
                protocol[协议]
                clientIp[客户端IP]
                clientPort[客户端端口]
            </layout>
        </form>
    </forms>

    <pages>
        <crud name="main">
            <rowActions>
                <action id="row-enabled-button" level="danger" label="启用" x:abstract="true">
                    <api url="@mutation:PortMapping__enabled?id=$id"/>
                    <confirmText>确认启用吗？</confirmText>
                </action>
                <action id="row-disabled-button" level="danger" label="禁用" x:abstract="true">
                    <api url="@mutation:PortMapping__disabled?id=$id"/>
                    <confirmText>确认禁用吗？</confirmText>
                </action>
                <actionGroup id="row-more-button" label="@i18n:common.more" level="primary">
                    <action id="row-enabled-button" label="启用">
                        <api url="@mutation:PortMapping__enabled">
                            <data>
                                <id>$id</id>
                            </data>
                        </api>
                        <confirmText>确认启用吗？</confirmText>
                        <visibleOn>${enabled == '0'}</visibleOn>
                    </action>
                    <action id="row-disabled-button" label="禁用">
                        <api url="@mutation:PortMapping__disabled">
                            <data>
                                <id>$id</id>
                            </data>
                        </api>
                        <confirmText>确认禁用吗？</confirmText>
                        <visibleOn>${enabled == '1'}</visibleOn>
                    </action>
                </actionGroup>
            </rowActions>
        </crud>
        <picker name="picker"/>
    </pages>
</view>
